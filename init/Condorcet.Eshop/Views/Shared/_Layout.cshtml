<html>
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>Condorcet</title>
    <meta name="keywords" content="HTML5,CSS3,Template" />
    <meta name="description" content="" />
    <meta name="Author" content="Adrien Clerbois [Condorcet Eshop]" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Content/css")
    @Scripts.Render("~/Content/bundles/modernizr")
    @Styles.Render("~/Content/core")

    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800" rel="stylesheet" type="text/css" />
</head>
<body>
    <header id="topNav">
        <div class="container">
            <button class="btn btn-mobile" data-toggle="collapse" data-target=".nav-main-collapse">
                <i class="fa fa-bars"></i>
            </button>
            <a class="logo" href="index.html">
                <img src="~/Content/images/logo.png" alt="Condorcet" style="max-height: 60px; " />
            </a>
            <div class="navbar-collapse nav-main-collapse collapse pull-right">
                <nav class="nav-main mega-menu">
                    <ul class="nav nav-pills nav-main scroll-menu" id="topMain">
                        <li>
                            <a class="dropdown-toggle" href="@Url.Action("Index","Home")">
                                Home
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <span id="header_shadow"></span>
    <div id="wrapper">
        @RenderBody()
        <section class="container">
            <div class="row bs-callout nomargin-bottom">
                <div class="col-md-8 text-center">
                    <h3 class="padding20">Subscribe <strong>now</strong> and get the <strong>latest</strong> offers.</h3>
                </div>
                <div class="col-md-4">
                    <p class="nomargin">Type your best E-mail Address</p>
                    <form method="post" action="@Url.Action("Email","Home")" class="input-group">
                        <input type="text" class="form-control" name="email" id="email" value="" placeholder="E-mail Address" />
                        <span class="input-group-btn">
                            <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </form>
                </div>
            </div>
        </section>
    </div>

    <footer>
        <div class="footer-bar">
            <div class="container">
                <span class="copyright">Copyright &copy; AClerbois.</span>
                <a class="toTop" href="#topNav">BACK TO TOP <i class="fa fa-arrow-circle-up"></i></a>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jscore")
    @RenderSection("scripts", required: false)
</body>
</html>